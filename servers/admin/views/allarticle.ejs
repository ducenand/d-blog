<%- include('header') %>
<%- include('nav') %>

  <section id="content">

    <section class="main padder">

      <div class="clearfix">

        <h4><i class="icon-list"></i>所有文章</h4>

      </div>

    </section>

    <div class="col-lg-12">

          <section class="panel">

            <header class="panel-heading">

              文章&nbsp;&nbsp;&nbsp;
              <a class="icon-pencil" href="/admin/writing">写文章</a>

            </header>

            <div class="row text-small">

              <div class="col-lg-4 m-b-mini">

                <select class="input-small inline form-control" style="width:130px">

                  <option value="0">批量操作</option>

                  <option value="1">编辑</option>

                  <option value="2">移至回收站</option>

                  <option value="3">导出</option>

                </select>

                <button class="btn btn-small btn-white">应用</button>

              </div>

              <div class="col-lg-4 m-b-mini">

                <div class="btn-group" data-toggle="buttons">

                  <label class="btn btn-small btn-white active">

                    <input type="radio" name="options" id="option1"> 全部(<%= count.num %>)

                  </label>

                  <label class="btn btn-small btn-white">

                    <input type="radio" name="options" id="option2"> 已发布(<%= count.num1 %>)

                  </label>

                  <label class="btn btn-small btn-white">

                    <input type="radio" name="options" id="option2"> 草稿(<%= count.num2 %>)

                  </label>

                </div>

              </div>

              <div class="col-lg-4">

                <div class="input-group">

                  <input type="text" class="input-small form-control" placeholder="输入搜索内容">

                  <span class="input-group-btn">

                    <button class="btn btn-small btn-white" type="button">搜索</button>

                  </span>

                </div>

              </div>

            </div>

            <div class="pull-out m-t-small">

              <table class="table table-striped b-t text-small">

                <thead>

                  <tr>

                    <th width="20"><input type="checkbox"></th>

                    <th class="th-sortable" data-toggle="class">标题

                      <span class="th-sort">

                        <i class="icon-sort-down text"></i>

                        <i class="icon-sort-up text-active"></i>

                        <i class="icon-sort"></i>

                      </span>

                    </th>

                    <th>作者</th>

                    <th>日期</th>

                    <th width="80">操作</th>

                  </tr>

                </thead>

                <tbody>
                  <% data.forEach(function(d) { %>

                  <tr>

                    <td><input type="checkbox" name="post[]" value="2"></td>

                    <td><%= d.title %></td>

                    <td><%= d.author %></td>

                    <td><%= d.create_time %></td>

                    <td>

                      <div class="btn-group">

                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-pencil"></i></a>

                        <ul class="dropdown-menu pull-right">

                          <li><a href="/admin/edit/<%= d.id %>">编辑</a></li>

                          <li><a href="#">删除</a></li>

                          <li><a href="#">移除回收站</a></li>

                          <li class="divider"></li>

                          <li><a href="/admin/preview/<%= d.id %>">预览文章</a></li>

                        </ul>

                      </div>

                    </td>

                  </tr>
                  <% }); %>

                </tbody>

              </table>

            </div>

            <footer class="panel-footer">

              <div class="row">

                <div class="col-lg-4 m-b-mini">

                <select class="input-small inline form-control" style="width:130px">

                  <option value="0">批量操作</option>

                  <option value="1">编辑</option>

                  <option value="2">移至回收站</option>

                  <option value="3">导出</option>

                </select>

                <button class="btn btn-small btn-white">应用</button>

              </div>

                <div class="col-lg-4 text-center">

                  <!-- <small class="text-muted inline m-t-small m-b-small">showing 20-30 of 50 items</small> -->

                </div>

                <div class="col-lg-4 text-right text-center-sm">

                  <ul class="pagination pagination-small m-t-none m-b-none">

                    <li><a href="#"><i class="icon-chevron-left"></i></a></li>

                    <li><a href="#">1</a></li>

                    <li><a href="#">2</a></li>

                    <li><a href="#">3</a></li>

                    <li><a href="#">4</a></li>

                    <li><a href="#">5</a></li>

                    <li><a href="#"><i class="icon-chevron-right"></i></a></li>

                  </ul>

                </div>

              </div>

            </footer>

          </section>

      </div>

  </section>



<%- include('footer') %>
